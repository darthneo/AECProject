<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/suitlaospng" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:src="@drawable/imglaos" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Saying Goodbye"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ListView
                android:id="@+id/listView1"
                android:layout_width="219dp"
                android:layout_height="wrap_content"
                android:fastScrollAlwaysVisible="false"
                android:fastScrollEnabled="false"
                android:smoothScrollbar="true" >

            </ListView>

            <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/btnGoodbyeLA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Goodbye" />

                    <Button
                        android:id="@+id/btnSeeyoulaterLA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="See you later" />

                    <Button
                        android:id="@+id/btnGoodnightLA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Good Night" />

                    
                                       
                         
                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
